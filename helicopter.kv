#:kivy 1.8.0

<StartPopUp>       
	app: app     
    size_hint: self.popup_size
    auto_dismiss: False
    title: 'Welcome'
    Button:
        text: 'Play'
        on_press: root.start_click()
        ###inbuilt function to remove popup
        on_press: root.dismiss()  

<Background>
	game: app.game
    canvas.before: 
    	Rectangle:
	    	source: 'Images/Sky_back_layer.png'
	        pos: self.pos 
	        size: self.size
        Rectangle:
        	texture: self.texture
            pos: self.pos
            size: self.size
            tex_coords: self.texture_coords 
            
<Tunnel>
	game: app.game
	canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Mesh:    
            vertices: self.vertices_top
            indices: self.indices_top
            mode: 'line_strip'        
        Mesh:    
            vertices: self.vertices_bot
            indices: self.indices_bot
            mode: 'line_strip'     
			
<Obstacle>
	game: app.game
    canvas:
        Rectangle:
            source: 'Images/Bird.png'
            pos: self.pos
            size: root.sizing  			   	
			        
<Helicopter>
	game: app.game
    canvas:
        Rectangle:
        	source: 'Images/helicopter.png'
            pos: self.pos
            size: self.size   
	
<HelicopterGame>
	app: app
	helicopter: helicopter_obj
	background: background_obj
	tunnel: tunnel_obj
	
	###BoxLayout here ensures the background is added to the whole screen, not just the bottom left corner        
	BoxLayout
		orientation: 'vertical'
		size: root.size        
		FloatLayout:           
			Background:
		        id: background_obj  

		    Tunnel:
		    	id: tunnel_obj   
		    	
		    Helicopter:
				id: helicopter_obj
				size_hint: self.sizing
				x: root.width/6
				center_y: root.center_y		        
		            
	