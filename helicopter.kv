#:kivy 1.8.0

<Helicopter>
    size: 50, 50
    canvas:
        Rectangle:
        	source: 'Images/helicopter.png'
            pos: self.pos
            size: self.size

<Terrain>
    size: 50, 200
    canvas:
    	Color: 
    		rgba: 0, 1, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

<HelicopterGame>
	helicopter: helicopter_obj

	canvas.before:
	    Rectangle:
	    	source: 'Images/Sky_back_layer.png'
	        pos: self.pos 
	        size: self.size
	
	Helicopter:
		id: helicopter_obj
		center: root.center

